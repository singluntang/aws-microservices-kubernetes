{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "/",
    "target": "es6", 
    "outDir": "./www",
    "sourceMap": true,
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": false,
    "types" : [],
    "paths": {
      "*": [
          "node_modules/*"
      ]
    },       
    "typeRoots": ["node_modules/@types"], 
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
]    
}